<div class="container">
  <h2>HTML5 Canvas</h2>
  <canvas style="padding: -100px;" id="draw" width="800" height="800" class="mb-3"></canvas>
</div>
<script>
  const canvas = document.querySelector("#draw");
  // setting up the context as 2d
  const ctx = canvas.getContext('2d');
  // changin the height and with to vh
  canvas.width = window.innerWidth * 0.9;
  canvas.height = window.innerHeight * 0.75;
  ctx.strokeStyle = 'red';
  ctx.lineJoin = 'round';
  ctx.lineCap = 'round';

  // dummy varaibles
  let isDrawing = false;
  let lastX = 0;
  let lastY = 0;

  function draw(e) {
    if(!isDrawing) return; // this line stops the fn from running when the mouse is not down

    console.log(e);
    ctx.beginPath();
    // start from
    ctx.moveTo(lastX, lastY);
    // go to
    ctx.lineTo(e.offsetX, e.offsetY);
    ctx.stroke();
    ctx.lineWidth = 50;
    lastX = e.offsetX
    lastY = e.offsetY

  };

  canvas.addEventListener('mousedown', (e) => {
    isDrawing = true;
    [lastX, lastY] = [e.offsetX, e.offsetY];
  })

  canvas.addEventListener('mousemove', draw)
  canvas.addEventListener('mouseup', () => isDrawing = false )
  canvas.addEventListener('mouseout', () => isDrawing = false )


</script>

